using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace VP_FirstProject
{
    public class Subscriber
    {
        public static void Main()
        {
            Publisher bl = new Publisher();

            bl.ProcessCompleted += bl_ProcessCompleted; // register with an event

            bl.StartProcess();
        }

        // event handler
        public static void bl_ProcessCompleted(object sender, StudentData args)
        {
            Console.WriteLine($"Process Completed!" + args.Name);
            Console.WriteLine($"Process Completed!" + args.Age);

            Console.WriteLine($"Process Completed!" + args.CompletionTime);
            Console.WriteLine($"Process Completed!" + args.IsSuccessful);

        }
    }
}
